{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn"
      }
    }
  },
  "files": {
    "ignore": [
      "**/*-lock.json",
      "**/.DS_Store",
      ".idea/**",
      ".vscode/**",
      ".history/**",
      "node_modules/**",
      "dist/**"
    ]
  }
}
